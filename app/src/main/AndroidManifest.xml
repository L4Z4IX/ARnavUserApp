            android:name="hu.pte.mik.l4z4ix.src.ArApplication.AdminVenueActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="hu.pte.mik.l4z4ix.src.ArApplication.AdminLevelActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="hu.pte.mik.l4z4ix.src.ArApplication.AdminPointActivity"
