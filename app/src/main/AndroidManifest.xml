        <activity
            android:name="hu.pte.mik.l4z4ix.src.ArApplication.UserVenueActivity"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name="hu.pte.mik.l4z4ix.src.ArApplication.AdminActivity"
